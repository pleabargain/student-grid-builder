{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "properties": {
    "students": {
      "type": "array",
      "items": {
        "type": "object",
        "required": ["name", "verbs", "adjectives", "categories"],
        "properties": {
          "name": {
            "type": "string"
          },
          "verbs": {
            "type": "array",
            "items": {
              "type": "string"
            }
          },
          "adjectives": {
            "type": "array",
            "items": {
              "type": "string"
            }
          },
          "categories": {
            "type": "object",
            "required": ["character", "business", "psychology", "desires"],
            "properties": {
              "character": {
                "type": "array",
                "items": {
                  "type": "object",
                  "required": ["text", "emoji"],
                  "properties": {
                    "text": {
                      "type": "string"
                    },
                    "emoji": {
                      "type": "string"
                    }
                  }
                }
              },
              "business": {
                "type": "array",
                "items": {
                  "type": "object",
                  "required": ["text", "emoji"],
                  "properties": {
                    "text": {
                      "type": "string"
                    },
                    "emoji": {
                      "type": "string"
                    }
                  }
                }
              },
              "psychology": {
                "type": "array",
                "items": {
                  "type": "object",
                  "required": ["text", "emoji"],
                  "properties": {
                    "text": {
                      "type": "string"
                    },
                    "emoji": {
                      "type": "string"
                    }
                  }
                }
              },
              "desires": {
                "type": "array",
                "items": {
                  "type": "object",
                  "required": ["text", "emoji"],
                  "properties": {
                    "text": {
                      "type": "string"
                    },
                    "emoji": {
                      "type": "string"
                    }
                  }
                }
              }
            }
          }
        }
      }
    }
  },
  "required": ["students"]
}

